                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/male5_layout"
                android:layout_width="wrap_content"
