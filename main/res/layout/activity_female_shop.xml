<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FemaleShop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginStart="20dp"
            android:text="Female Shop"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_marginBottom="30sp"
            android:columnCount="2">


            <LinearLayout
                android:id="@+id/bestseller1_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/female1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/rounded_corners"
                    android:src="@drawable/female_1" />

                <TextView
                    android:id="@+id/bestseller1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Campus"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star4_rating" />

                <TextView
                    android:id="@+id/bestseller1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 1670"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/female1_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bestseller2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/female2_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:src="@drawable/female_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Nike"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star5_rating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 4567"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/female2_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bestseller3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/female3_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:src="@drawable/female_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Sparx"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star3_rating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 2588"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/female3_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bestseller4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/female4_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:src="@drawable/female_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Puma-ferrari"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star5_rating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 4999"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/female4_cart"
                    android:layout_width="wrap_content"
