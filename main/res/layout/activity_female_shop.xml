                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/female5_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:src="@drawable/female_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Puma"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star5_rating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 3700"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/female5_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/male6_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/female6_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:src="@drawable/female_6" />

                <TextView
                    android:id="@+id/male6_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Skechers"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star5_rating" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 3576"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/female6_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>