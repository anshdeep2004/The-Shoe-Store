<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:id="@+id/fragment_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:columnCount="2"
            android:rowCount="2">

            <ImageButton
                android:id="@+id/male_nav"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="@color/white"
                android:src="@drawable/img" />

            <ImageButton
                android:id="@+id/female_nav"
                android:layout_columnWeight="1"
                android:src="@drawable/img_1"
                android:background="@color/white"
                android:layout_margin="5sp"/>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnCount="1">

            <ImageButton
                android:id="@+id/offer"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:src="@drawable/img_2" />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bestsellers"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:columnCount="2"
            android:layout_marginBottom="30sp">


            <LinearLayout
                android:id="@+id/bestseller1_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:background="#F4F0EC"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:id="@+id/bestseller1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/rounded_corners"
                    android:src="@drawable/bestseller1" />

                <TextView
                    android:id="@+id/bestseller1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="Puma"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/star4_rating" />

                <TextView
                    android:id="@+id/bestseller1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="#F4F0EC"
                    android:text="$ 2250"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/bestseller1_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="10sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bestseller2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5sp"
                android:layout_columnWeight="1"
                android:paddingLeft="20dp"
                android:background="#F4F0EC">

                <ImageButton
                    android:id="@+id/bestseller2_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bestseller2"
                    android:background="@color/white"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Campus"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#F4F0EC" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star5_rating"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 1565"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#F4F0EC"/>

                <Button
                    android:id="@+id/bestseller2_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy"
                    android:layout_marginBottom="10sp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bestseller3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5sp"
                android:layout_columnWeight="1"
                android:paddingLeft="20dp"
                android:background="#F4F0EC">

                <ImageButton
                    android:id="@+id/bestseller3_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bestseller3"
                    android:background="@color/white"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nike"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#F4F0EC" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star3_rating"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 3588"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#F4F0EC"/>

                <Button
                    android:id="@+id/bestseller3_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy"
                    android:layout_marginBottom="10sp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bestseller4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5sp"
                android:layout_columnWeight="1"
                android:paddingLeft="20dp"
                android:background="#F4F0EC">

                <ImageButton
                    android:id="@+id/bestseller4_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bestseller4"
                    android:background="@color/white"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skechers"
                    android:layout_margin="5sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#F4F0EC" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star5_rating"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 2999"
                    android:layout_margin="5sp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="#F4F0EC"/>

                <Button
                    android:id="@+id/bestseller4_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:width="120dp"
                    android:background="@drawable/button_colour"
                    android:text="Buy"
                    android:layout_marginBottom="10sp"/>


            </LinearLayout>


        </GridLayout>

    </LinearLayout>

</ScrollView>